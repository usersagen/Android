<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.hsj135.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_navigation_home_to_pythonFragment"
            app:destination="@id/pythonFragment" />
        <action
            android:id="@+id/action_navigation_home_to_androidFragment"
            app:destination="@id/androidFragment" />
        <action
            android:id="@+id/action_navigation_home_to_javaFragment"
            app:destination="@id/javaFragment" />
        <action
            android:id="@+id/action_navigation_home_to_phpFragment"
            app:destination="@id/phpFragment" />
        <action
            android:id="@+id/action_navigation_home_to_webFragment"
            app:destination="@id/webFragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_chart"
        android:name="com.example.hsj135.ui.chart.ChartFragment"
        android:label="@string/title_chart"
        tools:layout="@layout/fragment_chart" />

    <fragment
        android:id="@+id/navigation_video"
        android:name="com.example.hsj135.ui.video.VideoFragment"
        android:label="@string/title_video"
        tools:layout="@layout/fragment_video" />

    <fragment
        android:id="@+id/navigation_me"
        android:name="com.example.hsj135.ui.me.MeFragment"
        android:label="@string/title_me"
        tools:layout="@layout/fragment_me" />
    <fragment
        android:id="@+id/pythonFragment"
        android:name="com.example.hsj135.ui.home.python.PythonFragment"
        android:label="fragment_python"
        tools:layout="@layout/fragment_python" />
    <fragment
        android:id="@+id/androidFragment"
        android:name="com.example.hsj135.ui.home.android.AndroidFragment"
        android:label="fragment_android"
        tools:layout="@layout/fragment_android" />
    <fragment
        android:id="@+id/javaFragment"
        android:name="com.example.hsj135.ui.home.java.JavaFragment"
        android:label="fragment_java"
        tools:layout="@layout/fragment_java" />
    <fragment
        android:id="@+id/phpFragment"
        android:name="com.example.hsj135.ui.home.php.PhpFragment"
        android:label="fragment_php"
        tools:layout="@layout/fragment_php" />
    <fragment
        android:id="@+id/webFragment"
        android:name="com.example.hsj135.ui.home.web.WebFragment"
        android:label="fragment_web"
        tools:layout="@layout/fragment_web" >
        <argument
            android:name="url"
            app:argType="string"
            android:defaultValue="http://www.jd.com" />
    </fragment>
</navigation>